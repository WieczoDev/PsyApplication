                  <Button fx:id="closeButton" layoutX="407.0" layoutY="107.0" mnemonicParsing="false" onAction="#closeButtonAction" text="Retour en Arrière">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                    </children>
                </Pane>
            </bottom>
        </BorderPane>
    </children>
